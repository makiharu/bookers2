<!DOCTYPE html>
<html>
<head>
  <title>Bookers2</title>
  <%= csrf_meta_tags %>
  <%= csp_meta_tag %>

  <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload' %>
  <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>
</head>

<body>

  <% if flash[:notice] %>
  <div class="flash">
    <%= flash[:notice] %>
  </div>
  <% end %>
  <% if flash[:alert] %>
  <div class="flash">
    <p><%= flash[:alert] %></p>
  </div>
  <% end %>



    <header class="navbar navbar-fixed-top navbar-inverse">
      <div class="container">
        <nav class="nav navbar-nav navbar-left">
        <!--あってもなくても変わらない?
         <button type="button" class="navbar-toggle collapsed" data-toggle="collapse" data-target="#navbarEexample">
            <span class="sr-only">Toggle navigation</span>
            <span class="icon-bar"></span>
            <span class="icon-bar"></span>
            <span class="icon-bar"></span>
          </button>
  -->
          <span>Bookers</span>
        </nav>

          <ul class="nav navbar-nav navbar-right">
            <% if user_signed_in? %>
              <li>
                <%= link_to "Home", users_path, class: "glyphicon glyphicon-home home", "aria-hidden": true %>
              </li>
              <li>
                <%= link_to 'Users', users_path %>
                <span class="glyphicon glyphicon-user users" aria-hidden="true"></span>
              </li>
              <li>
                <%= link_to 'Books', books_path %>
                <span class="glyphicon glyphicon-book" aria-hidden="true"></span>
              </li>
              <li>
                <%= link_to "logout", destroy_user_session_path, method: :delete %>
                <span class="glyphicon glyphicon-share" aria-hidden="true"></span>
              </li>

            <% else %>
              <li>
                <%= link_to "Home", root_path %>
                <span class="glyphicon glyphicon-home home" aria-hidden="true"></span>
              </li>
              <li>
                <%= link_to "About", homes_about_path %>
                <span class="glyphicon glyphicon-link about" aria-hidden="true"></span>
              </li>
              <li>
                <%= link_to "Sign up", new_user_registration_path %>
                <span class="glyphicon glyphicon-edit" aria-hidden="true"></span>
              </li>
              <li>
                <%= link_to "ログイン", new_user_session_path %>
                <span class="glyphicon glyphicon-share" aria-hidden="true"></span>
              </li>
            <% end %>
          </ul>
        </nav>
      </div>
    </header>
  <%= yield %>
</body>
</html>