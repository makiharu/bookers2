
   <!--userinfo-->
      <h2>User info</h2>
      <table class="table">
        <tr>
          <%= attachment_image_tag user, :profile_image, :fill, 100, 100, format: 'jpeg', fallback: "no_image.jpg" %>
        </tr>
        <tr>
          <th>name</th>
          <th><%= user.name %></th>
        </tr>
        <tr>
          <th>introduction</th>
          <th><%= user.introduction %></th>
        </tr>
      </table>

      <!--アイコンボタン-->
      <div class="">

        <%= link_to  edit_user_path(user), class:'col-xs-12 btn btn-default' do %>
          <span class="glyphicon glyphicon-wrench" aria-hidden="true"></span>
        <% end %>
      </div>


      <!--新規投稿ページ-->

      <h2>New book</h2>
      <div class="form-group" role="form">
          <%= form_for(book) do |f| %>




              <div class="field row">
                <label>Title</label>
                <%= f.text_field :title, class:'form-control col-xs-12' %>
              </div>

              <div class="field row">
                <label>Opinion</label>
                <%= f.text_area :body, class:'form-control col-xs-12' %>
              </div>

              <div class="actions row">
                <%= f.submit 'Create Book', class:'btn btn-primary col-xs-12' %>
              </div>

          <% end %>
      </div>

