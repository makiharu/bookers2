  <div class="container">

	<h2>User info</h2>
		<%= render 'layouts/error_messages', model: @user %>
	
		<div class="form-group" role="form">

			<%= form_for(@user) do |f| %>

				<div class="field">
					<label>Name</label>
					<%= f.text_field :name %>
				</div>

				<div class="field">
					<label>Image</label>
					<%= f.attachment_field :profile_image %>
				</div>

				<div class="field">
					<label>Introduction</label>
					<%= f.text_area :introduction %>
				</div>

				<div class="actions">
					<input type="submit" name="commit" value="Update User" data-disable-with="Update User" >
				</div>
			<% end %>
		</div>
</div>