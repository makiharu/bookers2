<div class="container">
  <div clsss="row">
    <!--use info -->
    <%= render 'layouts/userinfo', user: @user %>


    <!--book一覧-->
    <div class="col-xs-9">
      <h2>Books</h2>

      <table class="table table-hover table-inverse">
        <thead>
          <tr>
            <th></th>
            <th>Title</th>
            <th>Opinion</th>
            <th colspan="3"></th>
         </tr>
        </thead>

        <tbody>
          <% @books.each do |book| %>
          <tr>
            <td><%= attachment_image_tag @user, :profile_image, :fill, 100, 100, format: 'jpeg', fallback: "no_image.jpg", size:'40x40' %></td>
            <th><%= link_to book.title, book_path(book) %></th>

            <td><%= book.body %></td>
          </tr>
          <% end %>
        </tbody>
      </table>
    </div>

  </div>
</div>

