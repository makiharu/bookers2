<!--ヘッダーと見出しがかぶるなぜ-->

<div class="container">
    <div class="row">
        <div class="col-md-6 col-md-offset-3">
          <h1>Editing Book</h1>

          <%= form_for(@book) do |f| %>

           <!--エラーメッセージを挿入user/edit-->
            <div class="field row">
                <label>Title</label>
                <%= f.text_field :title, class:'form-control col-xs-12' %>
            </div>

            <div class="field row">
               <label>Opinion</label>
               <%= f.text_area :body, class:'form-control col-xs-12' %>
            </div>


            <div class="actions row">
                <%= f.submit 'Update Book', class:'btn btn-primary col-xs-12' %>
            </div>

          <% end %>

          <div class="links" >
              <%= link_to 'Show', book_path(@book) %>
              <%= link_to 'Back', books_path %>
          </div>
    </div>
</div>
