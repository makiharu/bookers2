
<div class="container">

	<!-- <p id="notice"></p>-->


		<!--use info -->
		<%= render 'layouts/userinfo', user: current_user, book: @book %>



		<!--book detail-->
		<div class="col-xs-9">
			<h2>Book detail</h2>
			<table class="table">
				<tr>
					<td>
					    <a>
							<%= attachment_image_tag @user, :profile_image, :fill, 100, 100, format: 'jpeg', fallback: "no_image.jpg" %><br>
							<%= link_to @user.name, user_path(@user) %>
						</a>
					</td>
					<td><!--リンク先-->
						<%= link_to @onebook.title, book_path(@onebook) %>
					</td>
					<td><%= @onebook.body %></td>
					<td>

					<% if @onebook.user_id == current_user.id %>
					<td><%= link_to 'Edit', edit_book_path(@onebook), class: "label label-success" %>
					</td>
					<td>
						<%= link_to 'Destroy', book_path(@onebook), method: :delete, data: { confirm: '本当に消しますか?'}, class: "label label-danger" %>
					</td>
					<% end %>
				</tr>
			</table>
		</div>

</div>