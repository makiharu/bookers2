
<div class="container">
	<div clsss="row">
		<!--use info -->
		<%= render 'layouts/userinfo', user: @user %>


		<!--book detail-->
		<div class="col-xs-9">
			<h1>Book detail</h1>
			<table class="table">
				<thead>
					<tr>
						<th></th>
						<th>Title</th>
						<th>Opinion</th>
					</tr>
				</thead>
				<tbody>
					<% @books.each do |book| %>
					<tr><!--代わりの画像-->
						<td><%= attachment_image_tag @user, :profile_image, :fill, 100, 100, format: 'jpeg' %></td>
						<td><%= book.title %></td>
						<td><%= book.body %></td>
						<td><%= link_to 'Edit', edit_book_path(book), class: "label label-success" %>
						</td>
						<td>
							<%= link_to 'Destroy', book_path(book), method: :delete, data: { confirm: '本当に消しますか?'}, class: "label label-danger" %>
						</td>
					</tr>
					<% end %>
				</tbody>
			</table>
		</div>
	</div>




</div>