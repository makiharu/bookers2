
<div class="container">

	<!-- <p id="notice"></p>-->


		<!--use info -->
		<%= render 'layouts/userinfo', user: @user %>



		<!--book detail-->
		<div class="col-xs-9">
			<h2>Book detail</h2>
			<table class="table">
				<tr>

					</tr>
				</thead>
				<tbody>
					<!--ユーザーに紐づく本の投稿一覧-->
					<% @user.books.each do |book| %>
					<tr>
						<td>
						  <a>

							<%= attachment_image_tag @user, :profile_image, :fill, 100, 100, format: 'jpeg', fallback: "no_image.jpg", size:'40x40' %><br>
							<%= link_to @user.name, user_path(@user) %>
						</a>
						</td>
						<td><%= book.title %></td>
						<td><%= book.body %></td>

						<% if book.user_id == current_user.id %>
						<td><%= link_to 'Edit', edit_book_path(book), class: "label label-success" %>
						</td>
						<td>
							<%= link_to 'Destroy', book_path(book), method: :delete, data: { confirm: '本当に消しますか?'}, class: "label label-danger" %>
						</td>
						<% end %>

					</tr>
					<% end %>
				</tbody>
			</table>
		</div>
	</div>


</div>