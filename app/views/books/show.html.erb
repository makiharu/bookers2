
<div class="container">
	<div clsss="row">
		<!--use info -->
		<%= render 'layouts/userinfo', user: @user %>


		<!--book detail-->
		<div class="col-xs-9">
			<h1>Book detail</h1>
			<table class="table">
				<thead>
					<tr>
						<th></th>
						<th>Title</th>
						<th>Opinion</th>
					</tr>
				</thead>
				<tbody>
					<% @books.each do |book| %>
					<tr>
						<td>image</td>　　　<!--画像修正-->
						<td><%= book.title %></td>
						<td><%= book.body %></td>
						<td><span class="label label-success">Edit</span></td>
						<td><span class="label label-danger">Destroy</span></td>
						<!--ボタンのサイズと文字の色が微妙に違う-->
					</tr> <!--新規投稿後は、最新の投稿のみ表示される。且つ画像をクリックすると、投稿一覧ページへ飛ぶ--><!--リンク設定-->
					<% end %>
				</tbody>
			</table>
		</div>
	</div>



	　<!--新規投稿-->
	　　<%= render 'layouts/newbook', book: @book %>



</div>